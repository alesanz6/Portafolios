---
import '../styles/global.css';
---
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Alejandro Sanz | Portafolio</title>
  </head>
  <body class="min-h-screen flex flex-col bg-[var(--color-bg)] text-[var(--color-text)]">
    
    <header class="w-full py-6 px-4 max-w-6xl mx-auto flex flex-col md:flex-row items-center justify-between gap-6">
      <!-- Imagen a la izquierda -->
      <div class="flex-shrink-0 mt-4 md:mt-12">
        <img 
          src="/images/yo.jpg" 
          alt="Imagen de perfil" 
          class="h-80 w-80 rounded-full object-cover shadow-xl ring-4 ring-white ring-offset-4 ring-offset-[var(--color-bg)] transition-transform duration-300 hover:scale-105 hover:brightness-110"
        />
      </div>

      <!-- Navegación -->
      <div class="w-full md:w-auto flex justify-end md:justify-end items-center">
        <!-- Botón hamburguesa (solo visible en móvil) -->
        <button id="menu-btn" class="flex flex-col justify-center items-center w-8 h-8 gap-1.5 border rounded-md border-[var(--color-accent)] p-1 duration-300 hover:scale-105 hover:brightness-110] transition md:hidden">
          <span class="block w-6 h-0.5 bg-[var(--color-accent)]"></span>
          <span class="block w-6 h-0.5 bg-[var(--color-accent)]"></span>
          <span class="block w-6 h-0.5 bg-[var(--color-accent)]"></span>
        </button>


        <!-- Menú normal -->
        <nav id="menu" class="hidden md:flex space-x-6 text-sm font-medium md:space-x-6 flex-col md:flex-row mt-4 md:mt-0 gap-2 md:gap-0 pl-2 md:pl-0">
          <a href="#about" class="hover:text-[var(--color-accent)] transition">Sobre mí</a>
          <a href="#projects" class="hover:text-[var(--color-accent)] transition">Proyectos</a>
          <a href="#contact" class="hover:text-[var(--color-accent)] transition">Contacto</a>
          <a href="#cv" class="hover:text-[var(--color-accent)] transition">Curriculum</a>
        </nav>
      </div>
    </header>


    <!-- Contenido principal -->
    <main class="w-full max-w-6xl mx-auto px-6">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="w-full py-6 mt-12 text-sm text-center text-zinc-500">
      © 2025 Alejandro Sanz Antunez · 
      <a href="https://github.com/alesanz6" target="_blank" class="hover:text-[var(--color-accent)] transition">GitHub</a> ·
      <a href="https://linkedin.com/in/alejandro-sanz-antunez-aa104b319" target="_blank" class="hover:text-[var(--color-accent)] transition">LinkedIn</a> ·
      <a href="mailto:alejandrosanzantunez@gmail.com" class="hover:text-[var(--color-accent)] transition">Email</a> ·
      <a id="cv" href="/public/cv.pdf" target="_blank">Descargar CV</a>
    </footer>
    <script src="/js/menu.js" defer></script>
  </body>

</html>
