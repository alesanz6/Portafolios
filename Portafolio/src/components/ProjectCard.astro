---
const { title, description, tech, demoUrl, githubUrl, imageUrl } = Astro.props;
---

<div class="bg-white border border-zinc-200 rounded-xl overflow-hidden shadow-sm hover:shadow-md transition animate-fadeInDelay">
  {imageUrl && (
    <img 
      src={imageUrl} 
      alt={`Vista previa de ${title}`} 
      class="w-full h-48 object-cover"
      loading="lazy"
    />
  )}

  <div class="p-6">
    <h3 class="text-xl font-semibold text-[var(--color-text)] mb-2">{title}</h3>

    <p class="text-zinc-600 text-sm leading-relaxed mb-4">
      {description}
    </p>

    <div class="flex flex-wrap gap-2 text-xs font-medium text-[var(--color-accent)] mb-4">
      {Array.isArray(tech) &&
        tech.map((item) => (
        <span>{item}</span>
      ))}
    </div>

    <div class="flex gap-4 text-sm text-[var(--color-accent)]">
      {demoUrl && <a href={demoUrl} target="_blank" class="hover:underline">ðŸ”— Demo</a>}
      {githubUrl && <a href={githubUrl} target="_blank" class="hover:underline">ðŸ“‚ GitHub</a>}
    </div>
  </div>
</div>
